<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        app:title="푸쉬 알림"
        app:iconSpaceReserved="false">

        <SwitchPreferenceCompat
            app:key="PREF_SUB_TOPIC_GENERAL"
            app:iconSpaceReserved="false"
            app:defaultValue="true"
            app:title="일반 소식" />

        <SwitchPreferenceCompat
            app:key="PREF_SUB_TOPIC_URGENT"
            app:iconSpaceReserved="false"
            app:defaultValue="true"
            app:title="긴급 소식" />

        <SwitchPreferenceCompat
            app:key="PREF_SUB_TOPIC_TEST"
            app:iconSpaceReserved="false"
            app:defaultValue="false"
            app:isPreferenceVisible="false"
            app:title="Test 토픽" />

    </PreferenceCategory>

    <PreferenceCategory
        app:title="관리자 메뉴"
        app:iconSpaceReserved="false">

        <SwitchPreferenceCompat
            app:key="PREF_ADMIN_MODE"
            app:title="관리자 모드"
            app:defaultValue="false"
            app:iconSpaceReserved="false" />

        <Preference
            app:key="PREF_QR_SCANNER"
            app:title="QR Code 스캐너"
            app:iconSpaceReserved="false"
            app:summary="다른 사용자의 QR Code 를 스캔할 수 있습니다"
            app:isPreferenceVisible="false" />

    </PreferenceCategory>

</PreferenceScreen>