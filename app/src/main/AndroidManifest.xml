<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lkpc.android.app.glory">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.qr_code.QrCodeGeneratorActivity" android:windowSoftInputMode="adjustPan" />
        <activity android:name=".ui.qr_code.QrCodeScanActivity" />
        <activity android:name=".ui.note.NoteDetailActivity" />
        <activity android:name=".ui.note.NoteEditActivity" android:windowSoftInputMode="adjustPan" />
        <activity android:name=".ui.note.NoteListActivity" />
        <activity android:name=".ui.news.NewsActivity" android:label="@string/title_notifications" />
        <activity
            android:name=".ui.detail.DetailActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name=".MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:hardwareAccelerated="true"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>